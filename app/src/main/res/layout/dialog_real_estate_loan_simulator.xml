<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/loan_amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loan_amount" />

    <EditText
        android:id="@+id/loan_amount_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/personal_contribution_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_contribution" />

    <EditText
        android:id="@+id/personal_contribution_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/interest_rate_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/interest_rate_percent" />

    <EditText
        android:id="@+id/interest_rate_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loan_duration_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loan_duration_years" />

    <EditText
        android:id="@+id/loan_duration_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate" />

    <TextView
        android:id="@+id/monthly_payment_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monthly_payment"
        android:gravity="center"
        android:textSize="20sp"/>

</LinearLayout>
